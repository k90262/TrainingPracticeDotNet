@model IEnumerable<WebApplication1.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@*@Model.Count()*@
<a href="~/Customers/Create">New Customer</a>
<table border="1">
    <tr>
        <th>編號</th>
        <th>名稱</th>
        <th>生日</th>
        <th></th>
    </tr>
    @foreach (var obj in Model)
    {
        <tr>
            <td>@obj.CustomerID</td>
            <td>@obj.Name</td>
            @*<td>@obj.Birthday</td>*@
            <td>@obj.Birthday.Value.ToShortDateString()</td>
            <td>
                <a href="~/Customers/Delete?id=@obj.CustomerID">Delete</a>
            </td>
        </tr>
    }

</table>